<div class="container">
    <h1> Post List </h1>
    <table class="table">
        <thead class="thead-dark">
        <tr>
            <th scope="col"> Title </th>
        </tr>
        </thead>
        <% @posts.each do |post| %>
        <tbody>
        <tr class="d-flex">
            <td class="col-10" > <%= link_to post.title, post_path(post) %> </td>
            <td class="col-1">  <%= link_to 'Show ' , post_path(post) %> </td>
            <td><%= link_to 'Edit', edit_post_path(post) %></td>
             <td><%= link_to 'Delete', destroy_post_path(post),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
        </tr>
        </tbody>
        <% end %>  
    </table>
</div>


