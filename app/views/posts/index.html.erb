
<div class="container">
<div>
    <%= link_to 'New Post', new_post_path %>
<div>
    <h1> Post List </h1>
    <table class="table">
        <thead class="thead-dark">
        <tr>
            <th scope="col"> Title </th>
        </tr>
        </thead>
        <% @posts.each do |post| %>
        <tr>
            <td> <%= link_to post.title, post_path(post) %> </td>
        <% end %>  
    </table>
</div>

