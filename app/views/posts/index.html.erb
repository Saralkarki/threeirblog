
<div class="container">
    <h1> Post List </h1>
    <table class="table">
        <thead class="thead-dark">
        <tr>
            <th scope="col"> Title </th>
        </tr>
        </thead>
        <% @posts.each do |post| %>
        <tr>
            <td> <%= link_to post.title, post_path(post) %> </td>
        <% end %>  
    </table>
</div>

<% if flash[:success] %>
  <%= flash[:success] %>
<% end %>

<%= link_to 'Click here to log out.', logout_path %>

